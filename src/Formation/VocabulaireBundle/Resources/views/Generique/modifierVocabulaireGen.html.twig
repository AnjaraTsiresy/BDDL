<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>{% block title %}Forma2+ : Base léxicale{% endblock %}</title>
{% block stylesheets %}{% endblock %}
<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
<link rel="stylesheet" media="all" href="{{ asset('stagiaires_files/forma2plus.css') }}">
<link rel="stylesheet" media="screen and (max-width: 1000px)" href="{{ asset('stagiaires_files/tablet.css') }}">
<link rel="stylesheet" media="screen and (max-width: 650px)" href="{{ asset('stagiaires_files/smartphone.css') }}">
<link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
<link rel="stylesheet" href="{{ asset('css/jquery-ui.css') }}" type="text/css">
<script type="text/javascript" src="{{ asset('js/jquery-1.9.1.min.js') }}"></script>
<script src="{{ asset('js/jquery-ui.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jquery.form.js') }}"></script>
<script type="text/javascript">
    function closeSelf (f) {
        //alert("ato");
        f.submit();
        setTimeout(function() {
            window.close();
        }, 1000);

    }
    $i = 1;
    $j = 1;
</script>
<style>
    input[type=text]{
        width:350px;
    }
</style>

<h2>Modification du vocabulaire et des critères associés</h2>
<form action="{{ path('modifierVocabulaireGenaction') }}" method="post" enctype="multipart/form-data"  name="certform">
    <table id='recherche'>
        <input name="id" type="hidden" value="{{ id }}" />
        <tr>
            <td>Terme en français</td>
            <td><input type="text" name="langue_origine" value="{{ langue_origine  | convert_encoding('ISO-8859-1','UTF-8') }}"/></td>
        </tr>
        <tr>
            <td>Terme en anglais</td>
            <td><input type="text" name="langue_traduction" value="{{ langue_traduction  | convert_encoding('ISO-8859-1','UTF-8') }}"/></td>
        </tr>
        <tr>
            <td><input type="submit" value="Enregistrer" /></td>
            <td><input type="button" name="Annuler" value="Annuler" onclick="window.close();" /></td>
        </tr>
    </table>
</form>