{% extends '::base.html.twig' %}

{% block body -%}
    <h1>nl_article list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Editeur</th>
                <th>Theme</th>
                <th>Monthnewsletter</th>
                <th>Origine</th>
                <th>Journaliste</th>
                <th>Texte</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('nl_article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.article }}</td>
                <td>{{ entity.editeur }}</td>
                <td>{{ entity.theme }}</td>
                <td>{{ entity.monthNewsLetter }}</td>
                <td>{{ entity.origine }}</td>
                <td>{{ entity.journaliste }}</td>
                <td>{{ entity.texte }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('nl_article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('nl_article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('nl_article_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
